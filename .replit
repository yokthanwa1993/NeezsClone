modules = ["nodejs-20"]
[agent]
expertMode = true
integrations = ["firebase_barebones_javascript==1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["firebase-tools"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Neeiz App"

[[workflows.workflow]]
name = "Neeiz App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npx vite"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
